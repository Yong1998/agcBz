.header {
  position: relative;
  height: 88rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 36rpx;
  background: #FFF;
  border-bottom: 1px solid #eeeeee;
  padding-left: 24rpx;
}
.header::after {
  content: '';
  position: absolute;
  left: 128rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 0;
  height: 0;
  background: #eeeeee;
  /* 倒三角icon border */
  border-left: 8rpx solid transparent;
  border-right: 8rpx solid transparent;
  border-top: 8rpx solid #333;
}
.main {
  overflow: auto;
}

.main>.item {
  position: relative;
  display: flex;
  justify-content: flex-start;
  /* align-items: center; */
  height: 180rpx;
  min-height: 180rpx;
  padding: 16rpx;
  background: #ffffff;
  box-shadow: 0 0 8rpx 0 rgba(0, 0, 0, 0.1);
  margin: 24rpx 24rpx;
  box-sizing: border-box;
  border-radius: 18rpx;
}
.avatar {
  width: 100rpx;
  height: 100rpx;
  background-color: #f6f6f6;
  margin-right: 24rpx;
  border-radius: 8rpx;
}
.info {
  flex: 1;
  display: flex;
  flex-direction: column;
  /* justify-content: space-around; */
}
.info>view {
  font-size: 36rpx;
  color: #333;
  font-weight: bolder;
  margin-bottom: 24rpx;
}
.info>view:last-child {
  margin-bottom: 0;
}
.main>.item>.edit,
.main>.item>.add {
  position: absolute;
  right: 24rpx;
  bottom: 24rpx;
  color: #1281ff;
  font-size: 32rpx;
  font-weight: bolder;
}
.main>.item>.cancel {
  position: absolute;
  right: 112rpx;
  bottom: 24rpx;
  color: #1281ff;
  font-size: 32rpx;
  font-weight: bolder;
}


/** 居中弹窗 - 弹出动画 */
.edit.popup {
  position: fixed;
  left: 50%;
  top: 50%;
  z-index: 6001;
  transform: scale(0) translateX(-50%) translateY(-50%);
  transform-origin: 0 0;
  transition: transform 0.2s ease-in-out;
}
.popup>.mask {
  position: fixed;
  left: 0;
  top: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, 0.5);
  z-index: 6000;
}
.text {
  position: absolute;
  width: 640rpx;
  min-height: 600rpx;
  background-color: pink;
}

.edit.popup.show {
  transform: scale(1) translateX(-50%) translateY(-50%);
}
.edit>.form {
  width: 640rpx;
  /* min-height: 600rpx; */
  background: #fff;
  box-shadow: 0 0 8rpx 0 rgba(0, 0, 0, 0.1);
  border-radius: 18rpx;
  padding: 24rpx;
  box-sizing: border-box;
}
.edit>.form>.item {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin: 0 48rpx 24rpx 48rpx;
  height: 88rpx;
  font-size: 32rpx;
}
.edit>.form>.item>.inp {
  position: relative;
  flex: 1;
  margin-left: 24rpx;
  height: 68rpx;
  border-bottom: 1px solid #eeeeee;
}
.edit>.form>.item>.inp>input,
.edit>.form>.item>.inp>.fakeInp {
  height: 100%;
  font-size: 36rpx;
  line-height: 68rpx;
}
.select-box {
  position: absolute;
  left: 0;
  top: 68rpx;
  height: 400rpx;
  width: 100%;
  border-radius: 5rpx;
  font-size: 36rpx;
  background-color: #ffffff;
  box-shadow: 0 0 8rpx 0 rgba(0, 0, 0, 0.2);
  padding: 24rpx 12rpx;
  box-sizing: border-box;
}
.select-item {
  height: 68rpx;
  line-height: 68rpx;
  text-align: center;
}

.select-item.selected {
  background-color: #f6f6f6;
}
.select-hover {
  background-color: #f6f6f6;
}

.edit>.form>.btn-box {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 64rpx;
  font-size: 32rpx;
  margin-top: 24rpx;
}
.edit>.form>.btn-box>.btn {
  flex: 1;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  color: #fff;
  background: #1281ff;
  border-radius: 44rpx;
}
.edit>.form>.btn-box>.btn.cancel {
  background: #f6f6f6;
  color: #333;
  margin-right: 24rpx;
}